<div class="field">
<label for="message">Conversation</label><br>
<textarea name="message" cols="50" rows="10" id="message" ></textarea><br>
<button type="submit" class="ui blue labeled submit icon button"><i class="icon edit"></i>Envoyer</button>
<% } %>
